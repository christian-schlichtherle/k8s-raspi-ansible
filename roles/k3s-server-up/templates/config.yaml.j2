---
{% if k3s_cni_plugin == 'calico' %}
disable-network-policy: true
flannel-backend: none
{% else %}
flannel-backend: {{ k3s_flannel_backend }}
{% endif %}
{% if k3s_node_ip %}
node-ip: {{ k3s_node_ip }}
{% endif %}
{% if not k3s_server_schedule_pods %}
node-taint: node-role.kubernetes.io/master:NoSchedule
{% endif %}
